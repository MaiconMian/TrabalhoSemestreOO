<AnchorPane prefHeight="434.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tela.PagEdicaoController">
   <children>
      <ImageView fx:id="imgLogoCadastro" fitHeight="29.0" fitWidth="28.0" layoutX="24.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/logo.jpeg" />
         </image>
      </ImageView>
      <Label fx:id="NomeEmpresaCadastrotxt" layoutX="56.0" layoutY="13.0" text="Nome da Empresa">
         <font>
            <Font name="Arial Bold" size="27.0" />
         </font>
      </Label>
      <Label fx:id="EdicaoProdutostxt" layoutX="24.0" layoutY="48.0" text="Edição de Produto">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="textProdutoEdicao" layoutX="24.0" layoutY="103.0" prefHeight="25.0" prefWidth="176.0" promptText="Nome do Produto..." />
      <TextField fx:id="textMarcaEdicao" layoutX="212.0" layoutY="137.0" prefHeight="25.0" prefWidth="176.0" promptText="Marca..." />
      <TextField fx:id="textDescricaoEdicao" alignment="TOP_LEFT" layoutX="24.0" layoutY="178.0" prefHeight="168.0" prefWidth="551.0" promptText="Descrição do Produto..." />
      <TextField fx:id="textPrecoEdicao" layoutX="212.0" layoutY="103.0" prefHeight="25.0" prefWidth="176.0" promptText="Preço..." />
      <TextField fx:id="textCustoEdicao" layoutX="399.0" layoutY="103.0" prefHeight="25.0" prefWidth="176.0" promptText="Custo..." />
      <TextField fx:id="textCategoriaEdicao" layoutX="24.0" layoutY="137.0" prefHeight="25.0" prefWidth="176.0" promptText="Categoria..." />
      <Button fx:id="buttonSalvar" layoutX="478.0" layoutY="393.0" mnemonicParsing="false" onAction="#buttonSalvar" prefHeight="25.0" prefWidth="97.0" text="Salvar" />
      <Button fx:id="buttonCancelarEdicao" layoutX="370.0" layoutY="393.0" mnemonicParsing="false" onAction="#changeScreenToMenu" prefHeight="25.0" prefWidth="97.0" text="Cancelar" />
   </children>
</AnchorPane>
